{
  "name": "screenplay-visualizer",
  "version": "1.1.0",
  "description": "MCP Server + Electron Visualizer for Screenplay ensemble coding",
  "type": "module",
  "main": "dist/bootstrap.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.preload.json",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run build && node dist/tests/run-all-scenarios.js",
    "test:e2e:slow": "npm run build && node dist/tests/run-all-scenarios.js --delay=2000",
    "package": "npm run build && electron-builder --dir",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "mcp",
    "electron",
    "screenplay",
    "visualization"
  ],
  "author": "Stacey Vetzal <stacey@vetzal.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "d3": "^7.8.5",
    "fastmcp": "^3.19.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^3.2.4",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.mojility.screenplay-visualizer",
    "productName": "Screenplay Visualizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/bootstrap.js"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
